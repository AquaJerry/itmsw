# https://EditorConfig.org

# top-most EditorConfig file
root = true

# README.md etc.
[**.md]
end_of_file = lf
insert_final_newline = true

# styleguide from itmsw.com
[**.{html,css,jsp}]
charset = utf-8
end_of_file = lf
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

# styleguide from Google
[**.{gradle,java,js}]
charset = utf-8
end_of_file = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
